<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculadora Salário Liquido"
            android:id="@+id/titulo"/>
    <TextView
            android:text="Salário Bruto R$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/titulo_salarioBruto"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="0.00"
            android:ems="10"
            android:id="@+id/editText_salarioBruto"
    />
    <TextView
            android:text="Número Dependentes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/titulo_Dependentes"
    />
    <EditText
            android:layout_width="175dp"
            android:layout_height="47dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText_numeroDependente"
            android:text="0"/>
    <TextView
            android:text="Outros Descontos R$"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/titulo_resultadoOutro"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="0.00"
            android:ems="10"
            android:id="@+id/editText_OutrosDescontos"/>
    <Button
            android:text="Calcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btn_calcular" android:onClick="carregaResultado"/>

</LinearLayout>